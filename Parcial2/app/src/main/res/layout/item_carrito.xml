<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:backgroundTint="@color/white"
android:layout_marginVertical="20dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgMedicamentoCarrito"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvQuitar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:textAlignment="viewEnd"
            android:textColor="#858383"
            android:textSize="13sp"
            tools:text="Quitar" />

        <TextView
            android:id="@+id/txtNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginVertical="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Nombre medicamento" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtCostoProducto"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginRight="26dp"
                android:fontFamily="@font/nimbus_light"
                android:textColor="#63A787"

                android:textSize="20dp"
                tools:text="$ 0.0" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right | center_vertical"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/ibtnQuitarUnidades"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_left_24" />

            <TextView
                android:id="@+id/tvNumeroUnidades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="TextView"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="0" />

            <ImageButton
                android:id="@+id/ibtnAgregarUnidades"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_right_24" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>